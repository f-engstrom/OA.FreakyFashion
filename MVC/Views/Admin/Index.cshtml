@model FreakyFashion.Models.ViewModel


<h1>Admin</h1>


<div class="admin-page">

    <h2>Clothing</h2>

    <p>
        <a asp-controller="Clothings" asp-action="Create">Add Clothing</a>
    </p>

    @foreach (var item in Model.Clothing)
    {

        <div admin-page-item>

            @Html.DisplayFor(modelItem => item.Name)

            <img class="admin-page-image" src="@Html.DisplayFor(modelItem => item.ImageUrl)" />

            <div class="admin-page-controls">
                <a asp-controller="Clothings" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a asp-controller="Clothings" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a asp-controller="Clothings" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </div>
        </div>


    }

</div>

<div class="admin-page">
    <h2>Category</h2>

    <p>
        <a asp-controller="Categories" asp-action="Create">Add Category</a>
    </p>

    @foreach (var item in Model.Category)
    {

        <div class="admin-page-item">


            @Html.DisplayFor(modelItem => item.Name)

            <img class="admin-page-image" src="@Html.DisplayFor(modelItem => item.ImageUrl)" />

            <div class="admin-page-controls">

                <a asp-controller="Categories" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a asp-controller="Categories" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a asp-controller="Categories" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </div>

        </div>

    }

</div>

